<h1>Login</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <%= f.label :email, 'Email' %>
    <%= f.email_field :email %>
    
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password %>
    
    <%= f.submit ' Login' %>

<% end %>

<p>新規登録の方<%= link_to 'Sing up Now!', signup_path %></p>