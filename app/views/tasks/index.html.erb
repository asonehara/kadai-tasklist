<% if logged_in? %>
    <h3>ログインユーザ： <%= current_user.name %></h3>
    <p>タスク一覧</p>
    <ul>
        <% @tasks.each do |task| %>
            <li><%= link_to task.id, task %> : <%= task.status %> : <%= task.content %></li>
        <% end %>
    </ul>
    <%= link_to '新規タスクの投稿',new_task_path %>
<% else %>
    <h1>Welcome to the Tasklist</h1>
    <%= link_to 'Sign up now!', signup_path %>
    <br>
    <%= link_to 'Login', login_path %>
<% end %>







